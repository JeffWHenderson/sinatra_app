<h1><%= @character.name %></h1>
<br><br>
<form action="/characters/<%= @character.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label> character name </label>
  <input type="text" name="name" value="<%= @character.name  %>">

  <label>Character Type</label>
    <input list="race" name="race" value="<%= @character.race %>">
    <datalist id="race">
      <option value="Elf">
      <option value="Human">
      <option value="Gnome">
      <option value="Halfling">
      <option value="Half-Orc">
    </datalist>

<br><br><br>
  <label for="">description</label><br>
  <textarea name="description" rows="8" cols="80"><%= @character.description %></textarea>

<br><br><br>
  <label>Level</label>
  <input type="number"  min="0" max="99" name="level" value="<%= @character.level %>">

  <label>strength</label>
  <input type="number"   min="0" max="99" name="strength" value="<%= @character.strength %>">

  <label>Dexterity</label>
  <input type="number"   min="0" max="99" name="dexterity" value="<%= @character.dexterity %>">

  <label>Wisdom</label>
  <input type="number"   min="0" max="99" name="wisdom" value="<%= @character.wisdom %>">

  <label>Charisma</label>
  <input type="number"   min="0" max="99" name="charisma" value="<%= @character.charisma %>">

  <label>Constitution</label>
  <input type="number"   min="0" max="99" name="constitution" value="<%= @character.constitution %>">

  <label>intelligence</label>
  <input type="number"   min="0" max="99" name="intelligence" value="<%= @character.intelligence %>">
<br><br><br>
    <input type="submit" value="submit">
</form>
